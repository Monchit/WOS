@{
    ViewBag.Title = "Skill Master";
}
<style type="text/css">
    /*fix jTable*/
    span.jtable-goto-page select, span.jtable-page-size-change select {
        height: 25px;
        width: 60px;
        padding: 2px 2px;
        margin-bottom:auto;
    }
    div.jtable-main-container table.jtable thead th {
        text-align: center;
    }
    div.jtable-main-container > table.jtable > tbody > tr.jtable-data-row > td {
        text-align: center;
    }
</style>
<script type="text/javascript">
    $(document).ready(function () {
        $('#jTableSkill').jtable({
            title: 'Skill Master',
            paging: true, //Enable paging
            pageSize: 10, //Set page size (default: 10)
            sorting: true, //Enable sorting
            selecting: true, //Enable selecting
            defaultSorting: 'proc_code ASC', //Set default sorting
            actions: {
                listAction: '@Url.Action("SkillList","Home")',
                @*deleteAction: '@Url.Action("DeleteSkill","Home")',*@
                updateAction: '@Url.Action("UpdateSkill","Home")',
                createAction: '@Url.Action("CreateSkill","Home")'
            },
            fields: {
                proc_code: { title: 'Process Code', key: true, create: true, edit: false },
                proc_name: { title: 'Process Name', create: true, edit: true, width: '30%' },
                skill_type: { title: 'Type', create: true, edit: true, options: { 'PC': 'Process Skills', 'KL': 'Knowledge Skills' } },
                //update_date: { title: 'Update Date', create: false, edit: false },
                standard_time: { title: 'Std. Time', create: true, edit: true },
                del_flag: { title: 'Status', create: false, edit: true, options: { '0': 'Enable', '1': 'Disable' } }
            }
        });
        //Load student list from server
        $('#jTableSkill').jtable('load');
    });
</script>

<div id="jTableSkill"></div>
